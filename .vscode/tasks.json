{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build spacewars",
      "type": "shell",
      "command": "clang",
      "args": [
        "main.c",
        "-o",
        "build/spacewars",
        "-I/opt/homebrew/include",
        "-L/opt/homebrew/lib",
        "-lSDL2"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run spacewars",
      "type": "shell",
      "command": "./build/spacewars",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
