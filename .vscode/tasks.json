{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Pixel Invaders: Rogue Mode",
      "type": "shell",
      "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build --config Debug",
      "options": {
        "env": {
          "PKG_CONFIG_PATH": "/opt/homebrew/lib/pkgconfig" // Change to /usr/local/lib/pkgconfig if Intel Mac
        }
      },
      "problemMatcher": [],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "Run Pixel Invaders: Rogue Mode",
      "type": "shell",
      "command": "./build/PixelInvaders.app/Contents/MacOS/PixelInvaders", // change if output binary name differs
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "Build Pixel Invaders: Rogue Mode",
      "problemMatcher": [],
      "presentation": { "reveal": "always" }
    }
  ]
}
